<h1>Here are your links!</h1>

<p>YOU WILL NEVER FORGET THESE IMPORTANT LINKS.</p>

<table>
  <tr>
    <th>Title</th>
    <th>Url</th>
    <th>Like</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @links.each do |link| %>
  <tr>
    <td><%= link.title %></td>
    <td><%= link.url %></td>
    <td><%= link.like %></td>
    <td><%= link_to 'Show', link %></td>
    <td><%= link_to 'Edit', edit_link_path(link) %></td>
    <td><%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

